            async function showAirtime() {
                const preloader = document.getElementById('preloader');
                const selectElement = document.getElementById('airtime'); // The select element

                try {
                    // Show the preloader
                    preloader.style.display = 'block';

                    // Fetch data
                    const response = await fetch(AirtimeAPI);
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    const data = await response.json();

                    // Check if data contains the expected structure
                    if (data.status === "success" && Array.isArray(data.data)) {
                        // Clear existing options
                        selectElement.innerHTML = '';

                        // Create and append new options
                        data.data.forEach(item => {
                            const option = document.createElement('option');
                            option.value = item.biller_code; // Use the name as the value or set an ID if needed
                            option.textContent = item.name; // Display name as the text
                            selectElement.appendChild(option);
                        });
                    } else {
                        selectElement.innerHTML = '<option value="">Unexpected data structure</option>';
                    }
                } catch (error) {
                    console.error('There has been a problem with your fetch operation:', error);
                    selectElement.innerHTML = '<option value="">An error occurred while fetching data</option>';
                } finally {
                    // Hide the preloader
                    preloader.style.display = 'none';
                }
            }

            // Call the function to start fetching data
            showAirtime();

